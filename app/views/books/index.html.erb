<% @books.each do |book| %>
<div>
   <p>
    <%= link_to user_path(book.user.id) do %>
     <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
   </p>
   <p>
     <%= link_to book_path(book.id) do %>
      <%= book.title %>
     <% end %>
   </p>
   <p><%= book.body %></p>
</div>
<% end %>